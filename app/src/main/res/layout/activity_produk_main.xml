<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProdukMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:background="#EBE7E7">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/black_buttonback"
            android:id="@+id/buttonback"/>
        
        <FrameLayout
            android:layout_width="217dp"
            android:layout_height="217dp"
            android:background="@drawable/background_shape"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buttonback">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:src="@drawable/wortel"
            android:layout_centerInParent="true"

            />
        </FrameLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/sheet"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/bottom_nav_shape"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="5dp"
                android:src="@drawable/botton_sheet"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/btnsheet"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnsheet"
                android:id="@+id/rating">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Rp.10.000"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/centurygothic"
                    android:id="@+id/gmbrproduk"
                    />

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="30dp"
                    android:foregroundGravity=""
                    android:src="@drawable/bintangkecil"
                    android:layout_marginBottom="2dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="5.0"
                    android:layout_gravity="end"
                    android:layout_marginRight="14dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/centurygothic"
                    android:textSize="12dp"
                    android:alpha="0.7"
                    tools:ignore="TextSizeCheck"/>

            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rating"
                android:text="Wortel"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/centurygothic_bold"
                android:textSize="18dp"
                tools:ignore="TextSizeCheck"
                android:id="@+id/namaproduk"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_below="@id/rating"
                android:text="250g"
                android:layout_toRightOf="@id/namaproduk"
                android:textColor="@color/black"
                android:fontFamily="@font/centurygothic_bold"
                android:textSize="12dp"
                android:alpha="0.7"
                tools:ignore="TextSizeCheck"
                android:id="@+id/jmlhbarang"/>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:layout_below="@id/jmlhbarang"
                android:id="@+id/add">

                <FrameLayout
                    android:layout_width="108dp"
                    android:layout_height="38dp"
                    android:layout_gravity="end"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/input_shape">
                    
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@color/white"
                        android:layout_gravity="start|center"
                        android:src="@drawable/baseline_add_24"/>
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@color/white"
                        android:layout_gravity="end|center"
                        android:src="@drawable/baseline_add_24"/>

                </FrameLayout>



            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@id/add"
                >

                <Button
                    android:layout_width="290dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:text="Add To cart"
                    android:fontFamily="@font/segouui"
                    android:textColor="@color/white"
                    android:background="@drawable/button_shape"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="end"
                    android:src="@drawable/card"/>

            </FrameLayout>



        </RelativeLayout>
    </FrameLayout>

    

</androidx.coordinatorlayout.widget.CoordinatorLayout>